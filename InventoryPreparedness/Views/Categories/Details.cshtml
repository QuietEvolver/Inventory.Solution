@{
    Layout = "_Layout";
}

@model InventoryPreparedness.Models.Category
@using InventoryPreparedness.Models

<h2>Category Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)<h3>

@if (@Model.Inventories.Count == 0)
{
    <h3>No inventories have been added to this category yet!</h3>
}
else 
{
    <h3>Inventories:</h3>
    <ul>
    @foreach (Inventory inventory in Model.Inventories)
    {
        <li>@Html.ActionLink($"{inventory.Description}", "Details", "Inventories", new { id = inventory.InventoryId })</li>
    }
    </ul>
}

<p>@Html.ActionLink("Edit Category", "Edit", new { id = Model.CategoryId })</p>
<p>@Html.ActionLink("Delete Category", "Delete", new { id = Model.CategoryId })</p>
<p>@Html.ActionLink("Back to list", "Index")</p>